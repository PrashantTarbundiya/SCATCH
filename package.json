{
  "name": "scatch-ecommerce",
  "version": "1.0.0",
  "description": "Modern E-Commerce Platform with React.js and Node.js",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd Backend && npm run dev",
    "dev:frontend": "cd Frontend && npm run dev",
    "start": "cd Backend && npm start",
    "build": "cd Frontend && npm install && npm run build",
    "install:all": "npm install && cd Backend && npm install && cd ../Frontend && npm install",
    "clean": "rm -rf node_modules Backend/node_modules Frontend/node_modules",
    "test": "cd Backend && npm test && cd ../Frontend && npm test",
    "lint": "cd Frontend && npm run lint",
    "preview": "cd Frontend && npm run preview"
  },
  "keywords": [
    "ecommerce",
    "react",
    "nodejs",
    "mongodb",
    "express",
    "tailwind",
    "razorpay",
    "cloudinary"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/scatch-ecommerce.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/scatch-ecommerce/issues"
  },
  "homepage": "https://github.com/yourusername/scatch-ecommerce#readme"
}